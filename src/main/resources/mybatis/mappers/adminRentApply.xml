	<!--회원 상세 조회하기 -->

	<select id="selectMember" resultType="ApplyRentVO"
		parameterType="int">
    <![CDATA[
      SELECT * from rent_apply
      where rent_no = #{rent_no}  
    ]]>
	</select>

