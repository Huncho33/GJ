	<!--신청 상태변경 -->
	<update id="modifyAdminMon" parameterType="java.util.Map">
		update mon_apply
		set mo_result=#{_mo_result},
		mo_reason=#{_mo_reason}
		where mo_no=#{mo_no}
	</update>

	<!--신청 지급 날짜 -->
	<update id="modifyAdminMonPay" parameterType="java.util.Map">
